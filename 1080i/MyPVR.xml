            <animation effect="slide" start="-15,-15" end="15,15" time="6000" pulse="true" condition="Skin.HasSetting(animatedbg)">Conditional</animation>
        </control>
        <control type="group">
            <include>Animation_OpenClose_Furniture</include>
            <control type="image">
                <top>472</top>
                <width>1920</width>
                <height>608</height>
