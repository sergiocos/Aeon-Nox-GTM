            <!-- view id = 13 -->
            <include>LiveTVRecordingsView</include>
            <!-- view id = 14 -->
            <include>LiveTVTimersView</include>
            <!-- view id = 15 -->
            <include>LiveTVGuideChannelView</include>
            <!-- view id = 16 -->
            <include>LiveTVGuideNowNextView</include>
            <!-- view id = 17 -->
            <include>LiveTVSearchView</include>
        </control>
        <control type="group">
