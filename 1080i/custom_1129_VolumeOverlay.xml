<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="52">
    <zorder>5</zorder>
    <visible>Window.IsVisible(mutebug) | Window.IsVisible(volumebar)</visible>
    <animation type="WindowOpen" reversible="false">
        <effect type="zoom" start="80" end="100" center="960,540" delay="160" tween="back" time="240" />
        <effect type="fade" delay="160" end="100" time="240" />
    </animation>
    <animation type="WindowClose" reversible="false">
        <effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
        <effect type="fade" start="100" end="0" time="240" />
    </animation>
    <controls>
        <control type="progress" id="20">
            <include>HiddenObject</include>
            <info>Player.Volume</info>
        </control>
        <control type="group">
            <posx>1770</posx>
            <posy>0</posy>
                <control type="image">
                    <width>150</width>
                    <height>150</height>
                    <texture>$VAR[VolumeCircleVar]</texture>
                    <fadetime>0</fadetime>
                    <colordiffuse>$VAR[VolumeColorVar]</colordiffuse>
                </control>
                <control type="image">
                    <posx>50</posx>
                    <posy>50</posy>
                    <width>55</width>
                    <height>55</height>
                    <texture>$VAR[VolumeIconVar]</texture>
                    <colordiffuse>white2</colordiffuse>
                </control>
            <control type="label">
                <posx>25</posx>
                <posy>35</posy>
                <width>100</width>
                <height>200</height>
                <align>center</align>
                <label>$VAR[VolumeLabelVar]</label>
                <font>Font_Bold22_Caps</font>
                <scroll>true</scroll>
            </control>
            </control>
    </controls>
</window>
